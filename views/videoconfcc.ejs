<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <script src='https://joclass.cf/external_api.js'></script>
    <title>Online Class</title>
  </head>

  <body>
    <%- include('./navbar.ejs'); %>
    <div class="row">
      <div class="col-md-8">
        <div id="meet">
        </div>
      </div>
      <div class="col-md-4">
        <div class="container">
            <h4 class="text-center">Take Attendance</h4>
            <table class="table">
              <tr>
                  <th>Student Name</th>
                  <th>Take attendace</th>
              </tr>
        
              <form action="/users/home/crpage/attendance/<%= classid %>" method="post"> 
              <tr>
              
              <tr>
                <td>Enter date of class</td>
                <td><input type="datetime-local" name="data" value="" /></td>
              </tr>
        
              <% for(let i=0; i < classtable.length; i++) { %>
              <tr>
                <td> <%= classtable[i].name %> </td>
                 <td>   
        
                  <label>Present <input type="checkbox" name="arr" value="present"/></label> 
                  <label>Absent <input type="checkbox" name="arr" value="absent"/></label> 
                   </td>
              </tr>
              <% } %>
            </tr>
            <tr>
              <td><input class="btn btn-primary" type="submit" value="Submit"> </td>
            </tr>
          </form>
            </table>
          </div>
          
      </div>
    </div>     
  </body>

  <script>
    const domain = 'joclass.cf';
    const options = {
                    roomName: '<%= classid %>',
                    height:670,
                    userInfo: {
                        email: '<%= email %>',
                        displayName: '<%= name %>'
                        },
                    parentNode: document.querySelector('#meet')
                };
      var api = new JitsiMeetExternalAPI(domain, options);        
  </script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<%- include('./bootstrapjsfile.ejs'); %>
  </html>