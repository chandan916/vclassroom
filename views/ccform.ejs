    <%- include('./navbar.ejs'); %>
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

    <div class="container">
      <h1>Create a class</h1>
      <form action="/users/home/cc/classf" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" id="name" name="name" placeholder="Name of class" required />
        </div>    
        
        <div class="form-group">
          <input class="btn btn-primary" class="form-control"type="submit" value="Register" />
        </div>
      </form>
    </div>
    <%- include('./bootstrapjsfile.ejs'); %>
